<center id="myModal">
  <div class="modal-dialog modal-login">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">パスワードの初期化</h4>
      </div>
      <div class="modal-body">
        <%= form_with url: password_resets_path, local: true do |form| %>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon pt-2"><i class="fa fa-envelope"></i></span>
              <%= form.email_field :email, class: 'form-control', placeholder: "メールアドレス", required: "required" %>
            </div>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-lg">送信</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</center>
