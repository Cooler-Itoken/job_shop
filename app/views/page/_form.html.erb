<center class="signup-form">
  <%= form_with(model: user, local: true) do |form| %>
    <h2>会員情報入力</h2>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon p-2"><i class="fa fa-user"></i></span>
        <%= form.text_field :user_name, class: "form-control", placeholder: "ユーザー名", required: "required" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon p-2"><i class="fa fa-paper-plane"></i></span>
        <%= form.email_field :email, class: "form-control", placeholder: "メールアドレス", required: "required" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon p-2"><i class="fa fa-lock"></i></span>
        <%= form.password_field :password, class: "form-control", placeholder: "パスワード", required: "required" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon p-2">
          <i class="fa fa-lock"></i>
          <i class="fa fa-check"></i>
        </span>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "パスワードの確認", required: "required" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group pt-3">
        <%= form.label "お名前カナ(全角)", class: "pl-3" %>
      </div>
      <div class="input-group col-sm-5 continue">
        <%= form.text_field :family_furigana, class: "form-control", required: "required" %>
      </div>
      <div class="input-group col-sm-5 continue">
        <%= form.text_field :first_furigana, class: "form-control", required: "required" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group pt-3">
        <%= form.label "お名前(全角)", class: "pl-3" %>
      </div>
      <div class="input-group col-sm-5 continue">
        <%= form.text_field :family_name, class: "form-control", required: "required" %>
      </div>
      <div class="input-group col-sm-5  continue">
        <%= form.text_field :first_name, class: "form-control", required: "required" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group pt-3">
        <%= form.label "生年月日", class: "pl-3" %>
      </div>
      <div class="input-group">
        <div class="birthday-select px-3 pb-3">
          <%= raw sprintf(form.date_select(:birthday, prefix:'birthday', with_css_classes: 'pl-3', prompt: "--", use_month_numbers: true, start_year: Time.now.year - 18, end_year: 1900, date_separator:'%s'),' 年 ',' 月 ') + ' 日 ' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block btn-lg">次の画面に進む</button>
    </div>
    <p class="small text-center">「次へ進む」のボタンを押すことにより、 <br> <a href="#">利用規約</a>に同意したものとみなします</p>
  <% end %>
</center>
